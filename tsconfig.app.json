{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "references.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "strict": false,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
